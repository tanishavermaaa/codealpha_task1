<!DOCTYPE html>
<html>
<head>
  <title>Product List</title>
  <style>
    body { font-family: 'Helvetica Neue', sans-serif; background: #f0f2f5; margin: 0; padding: 0; }
    .container { max-width: 1200px; margin: 50px auto; padding: 20px; }
    h1 { text-align: center; color: #333; margin-bottom: 40px; }
    .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; }
    .card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      overflow: hidden;
      transition: transform 0.2s ease;
      text-align: center;
    }
    .card:hover { transform: translateY(-5px); }
    .card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }
    .card-content { padding: 15px; }
    .card-title { font-size: 1.2em; margin: 10px 0; color: #007bff; text-decoration: none; display: block; }
    .price { font-weight: bold; color: green; font-size: 1.1em; }
    .add-cart-btn {
      display: inline-block;
      margin-top: 10px;
      padding: 8px 16px;
      background: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      transition: background 0.3s ease;
    }
    .add-cart-btn:hover { background: #0056b3; }
    .success-message { text-align: center; color: green; margin-bottom: 20px; font-weight: bold; }
  </style>
</head>
<body>
  <div class="container">
    <h1>Our Products</h1>

    <% if (query.added) { %>
      <p class="success-message">Product added to cart! <a href="/cart">Go to Cart</a></p>
    <% } %>

    <div class="grid">
      <% products.forEach(product => { %>
        <div class="card">
          <img src="<%= product.image || 'https://via.placeholder.com/300x200?text=No+Image' %>" alt="<%= product.name %>">
          <div class="card-content">
            <a href="/products/<%= product._id %>" class="card-title"><%= product.name %></a>
            <p class="price">$<%= product.price.toFixed(2) %></p>
            <a href="/cart/add/<%= product._id %>" class="add-cart-btn">Add to Cart</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
